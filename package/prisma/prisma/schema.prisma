model Keystore {
  address String @id
  owner User? @relation(fields: [ownerId], references: [id])
  ownerId Int?
  encrypted String? // stringified json
  balance Int?
}

model EncryptedWallet {
  id String @id @default(uuid())
  ciphertext String
  iv String
  algorithm String
  keylen Int
  kdf String
  N Int
  r Int
  p Int
  salt String
}

